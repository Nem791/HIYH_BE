# Application  
spring.application.name=demo

# MongoDB  
spring.data.mongodb.uri=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/
spring.data.mongodb.database=your_database_name

# OpenAI (Azure)  
openai.api.url=https://<your-azure-endpoint>/openai/deployments/<deployment-name>/chat/completions?api-version=<version>
openai.api.key=YOUR_OPENAI_KEY
azure.openai.deployment-name=your_deployment_name

# JWT  
JWT_SECRET=your-256-bit-secret-key-should-be-long-enough

# Security  
security.enabled=true
COOKIE_SECURE=false

# Server  
server.address=0.0.0.0

# CORS  
cors.origin=http://localhost:3000,http://localhost:3001

# SendGrid  
sendgrid.api.key=YOUR_SENDGRID_API_KEY
sendgrid.sender.email=your@email.com
sendgrid.frontend.url=http://localhost:3000/verify